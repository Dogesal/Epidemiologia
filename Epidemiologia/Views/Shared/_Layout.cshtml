<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Epidemiologia</title>
	<link href="~/css/bootstrap.css" rel="stylesheet" />
	<link href="~/css/bootstrap.min.css" rel="stylesheet" />
	<link href="~/css/print.css" rel="stylesheet" />
	<link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="~/js/modernizr-2.6.2.js"></script>
</head>
<body>
    <!-- Menú de navegación fijo en la parte superior -->
    <div class="container-fluid">
        <div class="">
          @*   @{
                var usuarioAutenticado = Context.Session.GetString("UsuarioAutenticado");
                var nombreUsuario = Context.Session.GetString("NombreUsuario");
            } *@
            @if (true)
            {
                <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #39A6A3; height:auto; width:auto;">
                    <div class="container">
                        <div class="d-flex justify-content-start mx-2" style="height:60px; ">
                            <img src="~/img/hospital logo.png" alt="Hospital Logo" />
                        </div>

                        <!-- Título del menú -->
                        @Html.ActionLink("FICHA DE REGISTRO SOCIAL", "Index", "DatosGenerales", new { area = "" }, new { @class = "navbar-brand fw-bold" })

                        <!-- Botón para el menú colapsable en pantallas pequeñas -->
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <!-- Menú desplegable (se colapsa en pantallas pequeñas) -->
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0 d-flex justify-content-end w-100">
                                <!-- Opción: Nuevo Registro -->
                                <li class="nav-item">
                                    @Html.ActionLink("Nuevo Registro", "RegistroSocial", "RegistroSocial", new { area = "" }, new { @class = "nav-link" })
                                </li>

                                <!-- Opción: Búsqueda -->
                                <li class="nav-item">
                                    @Html.ActionLink("Búsqueda", "Busqueda", "DatosGenerales", new { area = "" }, new { @class = "nav-link" })
                                </li>

                                <!-- Opción: Cerrar sesión -->
                                <li class="nav-item d-flex">
                                    <button class="btn btn-danger" onclick="CerrarSesion()"> CERRAR SESION </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>

            }


            <!-- Contenido Principal con ancho de columna 8 -->
            <main class="" style="padding-left:100px;padding-right:100px; padding-top:50px;border-color:aqua ; border-radius:3px 4px" role="main" aria-labelledby="main-heading">
                <h1 id="main-heading" class="visually-hidden">Contenido Principal de Registro Social</h1>
                @RenderBody()
            </main>
        </div>
    </div>

    <input id="idRaiz" type="hidden" value=@Url.Content("~") />

    <script src="~/js/usuario/sesion.js"></script>
    <script src="~/js/sweetalert.js"></script>
    <script src="~/js/jquery-1.10.2.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
</body>
</html>
